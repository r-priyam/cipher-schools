{
    "editor.tabSize": 4,
    "editor.useTabStops": true,
	"editor.insertSpaces": false,
	"editor.detectIndentation": false,
    "search.exclude": {
		"**/node_modules": true,
		"**/*.code-search": true,
		"**/.yarn": true,
		"**/dist/": true,
		"**/.git/": true
	},
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": true
	}
}